/* pages/my/addCard.wxss */

image {
  width: 100%;
  border-radius: 10rpx;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
}

.input-card {
  font-size:18px;
  background-color: #f9f9f9;
  margin-top:30rpx;
  margin-bottom: 50rpx;
  border-radius: 10rpx;
  border:1rpx solid #d9d9d9;
}
.input-line {
  padding:8rpx 30rpx;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
  border-top:1rpx solid #d9d9d9;
}
.input-line:first-child {
  border: none;
}